<?xml version="1.0" ?>
<robot name="2link_planar">
  <!-- Simple 2-link planar robot: two 1m links rotating about Z -->

  <link name="base_link"/>

  <link name="link1"/>

  <link name="link2"/>

  <link name="end_effector"/>

  <!-- Joint 1: rotates link1 about Z at the base -->
  <joint name="joint1" type="revolute">
    <parent link="base_link"/>
    <child link="link1"/>
    <origin xyz="0 0 0" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
  </joint>

  <!-- Joint 2: rotates link2 about Z at 1m along X from joint1 -->
  <joint name="joint2" type="revolute">
    <parent link="link1"/>
    <child link="link2"/>
    <origin xyz="1 0 0" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
  </joint>

  <!-- Fixed joint to end-effector at 1m along X from joint2 -->
  <joint name="ee_joint" type="fixed">
    <parent link="link2"/>
    <child link="end_effector"/>
    <origin xyz="1 0 0" rpy="0 0 0"/>
  </joint>

</robot>
